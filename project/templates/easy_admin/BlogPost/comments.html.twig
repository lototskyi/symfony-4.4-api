<table class="table table-striped table-bordered">
    <head>
        <tr>
            <th>#</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </head>
    {% for comment in value %}
        <tr>
            <td>{{ comment.id }}</td>
            <td>{{ comment.author.name }}</td>
            <td>{{ comment.content }}</td>
        </tr>
    {% endfor %}
</table>